<h1 align ="center">
  Log in 
</h1>
<%= form_for (:session), url: login_path do |a| %>
<div>
       <div class="row">
           <div class=" col-xs-5 col-offset-2 form-group">
              <%= a.label :email %>
              <%= a.email_field :email, class:"form-control"  %> 
          </div>
      </div>

      <div class="row">
           <div class=" col-xs-5 col-offset-2 form-group">
              <%= a.label :password %>
              <%= a.password_field :password, class:"form-control"  %> 
          </div>
      </div>
</div>

  
  <%= a.submit "Log in", class:"btn btn-primary" %>
<%end%> 
