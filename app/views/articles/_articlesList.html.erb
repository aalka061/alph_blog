
  <% obj.each do |article|%>
<div class="row">
     <div class="col-xs-8 col-xs-offset-2">
       <div class="well well-lg">
         <div class="article-title">
                <%= link_to article.title, article_path(article) %> 
         </div>
         <div class="article-body">
                <%= article.description %> 
               <div class="article-meta-info">
                  <small>Created by  <%= article.user.username if article.user %>,
                  <%= time_ago_in_words(article.created_at) %> ago,
                  last update : <%=time_ago_in_words(article.updated_at)%> ago
           
                   </small>
                </div>
               
         </div>
          
         <%if loggedin? && (current_user == article.user || current_user.admin?) %>
           <div class="articles-actions">
              <%=link_to 'Edit Article',  edit_article_path(article), class:"btn btn-xs btn-success" %>    
              <%=link_to 'Delete Article', article_path(article), method: :delete, data:{confirm: "Are you sure"}, 
                                                                   class:"btn btn-xs btn-danger"%>    
           </div>
         <%end%>
       </div>
      </div> 
 </div>
    
    
<% end %>
